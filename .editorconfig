# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 0
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[{*.json, *.yml, *.yaml, *.html, *.html.twig}]
indent_size = 2

[Makefile]
indent_style = tab
